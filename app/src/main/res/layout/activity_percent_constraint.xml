<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>
        <ImageView
                android:id="@+id/image_chandler"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/chandler_sketch"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline"
                app:layout_constraintDimensionRatio="74:100"
                android:layout_marginTop="7dp"
                app:layout_constraintHorizontal_bias="1.0"/>

        <ImageView
                android:id="@+id/image_phoebe"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/image_chandler"
                android:src="@drawable/phoebe_sketch"
                app:layout_constraintDimensionRatio="h,74:100"/>

        <ImageView
                android:id="@+id/image_ross"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio=".74"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_phoebe"
                android:src="@drawable/ross_sketch"
                app:layout_constraintRight_toLeftOf="@+id/guideline"/>

        <ImageView
                android:id="@+id/image_monica"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintDimensionRatio=".74"
                app:layout_constraintLeft_toLeftOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/image_ross"
                android:src="@drawable/monica_sketch"/>

        <ImageView
                android:id="@+id/image_joey"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="0.74"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_monica"
                android:src="@drawable/joey_sketch"
                app:layout_constraintRight_toLeftOf="@+id/guideline"/>


    </android.support.constraint.ConstraintLayout>
</ScrollView>