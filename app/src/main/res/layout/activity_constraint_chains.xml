<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/sid_1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/sid"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/sid_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="0.5"
            android:layout_marginTop="8dp"/>

    <ImageView
            android:id="@+id/sid_2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/sid"
            android:visibility="gone"
            app:layout_constraintRight_toLeftOf="@+id/sid_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <ImageView
            android:id="@+id/sid_3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/sid"
            android:visibility="gone"
            app:layout_constraintRight_toLeftOf="@+id/sid_1"
            app:layout_constraintLeft_toRightOf="@+id/sid_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="8dp"/>

    <ImageView
            android:id="@+id/sid_4"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:src="@drawable/sid"
            app:layout_constraintRight_toLeftOf="@+id/sid_5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <ImageView
            android:id="@+id/sid_5"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:src="@drawable/sid"
            app:layout_constraintRight_toLeftOf="@+id/sid_6"
            app:layout_constraintLeft_toRightOf="@+id/sid_4"/>

    <ImageView
            android:id="@+id/sid_6"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:src="@drawable/sid"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/sid_5"/>

</android.support.constraint.ConstraintLayout>