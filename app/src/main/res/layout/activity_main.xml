<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.kaitlynanderson.coordinatorlayoutbehavior.MainActivity">

    <Button
            android:id="@+id/button_coordinator1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Coordinator Layout Bottom Sheet"
            android:background="@color/materialRed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_coordinator2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintVertical_chainStyle="spread"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:id="@+id/button_coordinator2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Custom Coordinator Layout Bottom Sheet"
            android:background="@color/materialOrange"
            app:layout_constraintTop_toBottomOf="@+id/button_coordinator1"
            app:layout_constraintBottom_toTopOf="@+id/button_coordinator3"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/button_coordinator3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Coordinator Layout FAB and Snackbar"
            android:background="@color/materialYellow"
            app:layout_constraintTop_toBottomOf="@+id/button_coordinator2"
            app:layout_constraintBottom_toTopOf="@+id/button_percent_relative_layout"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/button_percent_relative_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Percent Relative Layout"
            android:background="@color/materialGreen"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_coordinator3"
            app:layout_constraintBottom_toTopOf="@+id/button_percent_to_constraint"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/button_percent_to_constraint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Percent Relative to Constraint Layout"
            android:background="@color/materialBlue"
            app:layout_constraintTop_toBottomOf="@+id/button_percent_relative_layout"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_constraint_chain"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

    <Button
            android:id="@+id/button_constraint_chain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Constraint Layout Chains"
            android:background="@color/materialIndigo"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/button_percent_to_constraint"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_constraint_playground"/>

    <Button
            android:id="@+id/button_constraint_playground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Constraint Layout Playground"
            android:background="@color/materialPurple"
            android:textColor="@color/white"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_constraint_chain"
            android:layout_marginBottom="8dp"/>


</android.support.constraint.ConstraintLayout>
