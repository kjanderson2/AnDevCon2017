<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.percent.PercentRelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/image_chandler"
                android:src="@drawable/chandler_sketch"
                android:layout_alignParentStart="true"
                app:layout_widthPercent="49%"
                app:layout_aspectRatio="74%"/>
        <ImageView
                android:id="@+id/image_phoebe"
                android:src="@drawable/phoebe_sketch"
                android:layout_below="@id/image_chandler"
                app:layout_widthPercent="49%"
                android:layout_alignParentEnd="true"
                app:layout_aspectRatio="74%"/>
        <ImageView
                android:id="@+id/image_ross"
                android:layout_below="@id/image_phoebe"
                android:src="@drawable/ross_sketch"
                app:layout_widthPercent="49%"
                android:layout_alignParentLeft="true"
                app:layout_aspectRatio="74%"/>

        <ImageView
                android:id="@+id/image_monica"
                android:layout_below="@id/image_ross"
                android:src="@drawable/monica_sketch"
                app:layout_widthPercent="49%"
                android:layout_alignParentRight="true"
                app:layout_aspectRatio="74%"/>

        <ImageView
                android:id="@+id/image_joey"
                android:layout_below="@id/image_monica"
                android:src="@drawable/joey_sketch"
                app:layout_widthPercent="49%"
                android:layout_alignParentLeft="true"
                app:layout_aspectRatio="74%"/>

    </android.support.percent.PercentRelativeLayout>
</ScrollView>